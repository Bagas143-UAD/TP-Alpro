        garis();
        cout<<"1. Admin\n";
        cout<<"2. User\n";
        cout<<"3. Keluar\n";
        cout<<"Pilih Sistem: ";
        cin>>menu.pilih;
        cout<<endl;

        switch (menu.pilih) {
            case 1: 
            	system("cls");
				password(); 
				break;
           case 2:
   				 system("cls");
   				 tampilanUser(); 
    			break;

            case 3: 
            	system("cls");
				cout << ">>> Terima kasih telah menggunakan sistem.";
				cout<<endl; 
				break;
            default: 
            	system("cls");
				cout << ">>> Pilihan tidak valid!";
				cout<<endl; 
				break;
        }
    } while (menu.pilih != 3);

    return 0;
}
